<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

	<body>
    <itemCollectionWithImageHeader id="com.sample.menu-items-with-sections">
      <header>
        <imageHeader>
            <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=620|1080=940)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("falco953","{{TEXT(More...)}}","","backgrounds/photo.jpg","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","50","20","FFFFFF","FFFFFF","right","top","420","110","","10","Grid")}})}}</image>
        </imageHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              <oneLineMenuItem id="Camera Make" onPlay="atv.loadURL('{{URL(key)}}/make&amp;PlexConnect=DirectoryWithPreview')" onSelect="atv.loadURL('{{URL(key)}}/make&amp;PlexConnect=DirectoryWithPreview')">
                <label>{{TEXT(Camera Make)}}</label>
                <preview>
                  <link>{{URL(key)}}/make?X-Plex-Container-Start=0&amp;X-Plex-Container-Size=25&amp;PlexConnect=SectionPreview</link>
                </preview>
              </oneLineMenuItem>

              <oneLineMenuItem id="Camera Model" onPlay="atv.loadURL('{{URL(key)}}/model&amp;PlexConnect=DirectoryWithPreview')" onSelect="atv.loadURL('{{URL(key)}}/model&amp;PlexConnect=DirectoryWithPreview')">
                <label>{{TEXT(Camera Model)}}</label>
                <preview>
                  <link>{{URL(key)}}/model?X-Plex-Container-Start=0&amp;X-Plex-Container-Size=25&amp;PlexConnect=SectionPreview</link>
                </preview>
              </oneLineMenuItem>

              <oneLineMenuItem id="Aperture" onPlay="atv.loadURL('{{URL(key)}}/aperture&amp;PlexConnect=DirectoryWithPreview')" onSelect="atv.loadURL('{{URL(key)}}/aperture&amp;PlexConnect=DirectoryWithPreview')">
                <label>{{TEXT(Aperture)}}</label>
                <preview>
                  <link>{{URL(key)}}/aperture?X-Plex-Container-Start=0&amp;X-Plex-Container-Size=25&amp;PlexConnect=SectionPreview</link>
                </preview>
              </oneLineMenuItem>
              
              <oneLineMenuItem id="Shutter Speed" onPlay="atv.loadURL('{{URL(key)}}/exposure&amp;PlexConnect=DirectoryWithPreview')" onSelect="atv.loadURL('{{URL(key)}}/exposure&amp;PlexConnect=DirectoryWithPreview')">
                <label>{{TEXT(Shutter Speed)}}</label>
                <preview>
                  <link>{{URL(key)}}/exposure?X-Plex-Container-Start=0&amp;X-Plex-Container-Size=25&amp;PlexConnect=SectionPreview</link>
                </preview>
              </oneLineMenuItem>
              
              <oneLineMenuItem id="ISO" onPlay="atv.loadURL('{{URL(key)}}/iso&amp;PlexConnect=DirectoryWithPreview')" onSelect="atv.loadURL('{{URL(key)}}/iso&amp;PlexConnect=DirectoryWithPreview')">
                <label>{{TEXT(ISO)}}</label>
                <preview>
                  <link>{{URL(key)}}/iso?X-Plex-Container-Start=0&amp;X-Plex-Container-Size=25&amp;PlexConnect=SectionPreview</link>
                </preview>
              </oneLineMenuItem>
              
              <oneLineMenuItem id="Lens" onPlay="atv.loadURL('{{URL(key)}}/lens&amp;PlexConnect=DirectoryWithPreview')" onSelect="atv.loadURL('{{URL(key)}}/lens&amp;PlexConnect=DirectoryWithPreview')">
                <label>{{TEXT(Lens)}}</label>
                <preview>
                  <link>{{URL(key)}}/lens?X-Plex-Container-Start=0&amp;X-Plex-Container-Size=25&amp;PlexConnect=SectionPreview</link>
                </preview>
              </oneLineMenuItem>
              
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
